<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/show_text_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Data"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="#896332"/>

    <Button
        android:id="@+id/btn_show_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Information"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_store_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Information"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_show_information"
        android:layout_marginTop="15dp"/>

</RelativeLayout>